# ====================================
# PDF Bot Environment Configuration
# ====================================
# Copy this file to .env and fill in your values

# ====================================
# Bot Configuration
# ====================================
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=8269061109:AAGhpzPN8bIxnVIHoFIM6g3R1Xi2onyEvtE

# Admin user IDs (comma-separated, get from @userinfobot)
ADMIN_IDS=123456789,987654321

# Support username (without @)
SUPPORT_USERNAME=YourSupportUsername

# ====================================
# File Limits
# ====================================
# Maximum file size in MB
MAX_FILE_SIZE_MB=50

# Maximum number of images per PDF
MAX_IMAGES_PER_PDF=100

# Maximum number of PDFs to merge
MAX_PDFS_TO_MERGE=20

# ====================================
# Feature Flags
# ====================================
# Enable/disable features (true/false)
OCR_ENABLED=false
PDF_TO_WORD_ENABLED=false
PDF_TO_EXCEL_ENABLED=false

# ====================================
# OCR Configuration
# ====================================
# Tesseract language code (eng, ara, fas, etc.)
# Multiple languages: eng+ara
OCR_LANGUAGE=eng

# OCR processing timeout in seconds
OCR_TIMEOUT=300

# ====================================
# Rate Limiting
# ====================================
# Maximum operations per user per hour
MAX_OPERATIONS_PER_HOUR=50

# Enable rate limiting (true/false)
RATE_LIMIT_ENABLED=false

# ====================================
# Database (Optional)
# ====================================
# DATABASE_URL=postgresql://user:password@localhost/pdfbot

# ====================================
# Logging
# ====================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ====================================
# Cloud Storage (Optional)
# ====================================
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_BUCKET_NAME=your_bucket_name

# GOOGLE_DRIVE_CREDENTIALS_FILE=credentials.json

# DROPBOX_ACCESS_TOKEN=your_dropbox_token

# ====================================
# External Services (Optional)
# ====================================
# For HTML to PDF conversion
# WKHTMLTOPDF_PATH=/usr/local/bin/wkhtmltopdf

# For advanced PDF processing
# GHOSTSCRIPT_PATH=/usr/local/bin/gs

# ====================================
# Performance
# ====================================
# Number of worker threads
WORKER_THREADS=4

# Enable file caching
ENABLE_CACHE=true

# Cache expiry in seconds
CACHE_EXPIRY=3600

# ====================================
# Security
# ====================================
# Minimum password length for PDF protection
MIN_PASSWORD_LENGTH=6

# Maximum password length
MAX_PASSWORD_LENGTH=128

# ====================================
# Notifications
# ====================================
# Webhook URL for notifications (optional)
# WEBHOOK_URL=https://your-webhook-url.com

# ====================================
# Development
# ====================================
# Development mode (enables debug features)
DEV_MODE=false

# Test bot token (for development)
# TEST_BOT_TOKEN=your_test_bot_token